@{
  Layout = "_Layout";
}

@using DineDash.Models;
@model List<DineDash.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No Restaurants have been added yet!</h3>
} 

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new{ id = restaurant.RestaurantId}) | @restaurant.Cuisine.Name</li>;
}
<h3>@Html.ActionLink("Home", "Index", "Home")</h3>
<p>@Html.ActionLink("Show Favorites", "Favorites")</p>